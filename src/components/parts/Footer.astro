---
import { Image } from "astro:assets";

import logo from "../../images/chuao/logo-b-white.png";
import logo2 from "../../images/chuao/logo-intercacao.png";
---

<footer
  class="bg-black flex justify-center items-center w-full flex-col gap-5 px-50 py-50"
>
  <div class="size-50 flex-none rounded-lg">
    <Image
      inferSize={true}
      src={logo}
      alt="Chuao"
      class="object-fill object-center rounded-lg"
    />
  </div>

  <div
    class="size-70 flex-none rounded-lg flex gap-2 flex-col justify-center items-center text-white"
  >
    <p class="text-xs font-thin">distribuido por:</p>
    <Image
      inferSize={true}
      src={logo2}
      alt="Chuao"
      class="object-fill object-center rounded-lg"
    />
    <p class="text-xs font-thin">
      Copyrights Â© 2025 Intercacao All right reserved.
    </p>
  </div>
</footer>
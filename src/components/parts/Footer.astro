---
import { Image } from 'astro:assets';

import logoYeih from '@/images/global/logo-yeih.webp';
import logoInterCacao from '@/images/global/logo-intercacao.webp';
---

<footer
  class="flex h-screen w-full flex-col items-center justify-center gap-10 bg-black p-10 md:gap-5 md:p-20 lg:gap-5 lg:p-30 xl:gap-5 xl:p-50"
>
  <div class="size-40 flex-none rounded-lg md:size-50 lg:size-50 xl:size-50">
    <Image
      inferSize={true}
      loading="lazy"
      src={logoYeih}
      alt="global"
      class="rounded-lg object-fill object-center"
    />
  </div>

  <div
    class="flex size-50 flex-none flex-col items-center justify-center gap-2 rounded-lg text-white md:size-70 lg:size-70 xl:size-70"
  >
    <p class="text-xs font-thin">distribuido por:</p>
    <Image
      inferSize={true}
      loading="lazy"
      src={logoInterCacao}
      alt="global"
      class="rounded-lg object-fill object-center"
    />
    <p class="text-xs font-thin">Copyrights Â© 2025 Intercacao All right reserved.</p>
  </div>
</footer>

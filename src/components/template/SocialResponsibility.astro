---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

type Props = CollectionEntry<"template">["data"];

const { socialResponsibility } = Astro.props;
---

<section
    id="section-responsive"
    class="bg-neutral-100 flex w-full flex-col gap-5 xl:px-50 lg:px-50 md:px-50 px-5 py-10 pt-10 pb-20"
>
    <h1 class="text-4xl font-bold text-neutral-600 uppercase">
        {socialResponsibility?.title}
    </h1>
    <p class="text-lg">
        {socialResponsibility?.paragraphs}
    </p>
    <div class="flex justify-center items-center gap-5 py-10">
        <div
            class="xl:w-110 lg:w-110 md:w-110 w-full flex-none rounded-lg flex flex-col justify-center items-center gap-20"
        >
            {
                socialResponsibility?.images?.map((image, index) => (
                    <Image
                        inferSize={true}
                        src={image.src}
                        alt={image.alt}
                        class="object-fill object-center rounded-lg"
                    />
                ))
            }
        </div>
    </div>
</section>

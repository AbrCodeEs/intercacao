{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/assets/*": ["src/assets/*"],
      "@/images/*": ["src/assets/img/*"],
      "@/lib/*": ["src/lib/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/types/*": ["src/types/*"],
      "@/*": ["src/*"]
    }
  }
}
